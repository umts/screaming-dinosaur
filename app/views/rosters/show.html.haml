= render layout: 'layouts/section', locals: { heading: "#{@roster.name} On-Call" } do
  = render partial: 'current',
           locals: { current_assignment: @current_assignment, fallback_user: @fallback_user, roster: @roster }
  = render partial: 'your_assignments', locals: { assignments: @assignments } if @assignments.present?
  .mb-3{
    'data-controller': 'assignment-calendar',
    'data-assignment-calendar-events-url-value': roster_assignments_path(@roster, format: :json),
    'data-assignment-calendar-new-assignment-url-value': new_roster_assignment_path(@roster)
  }
  = render partial: 'feed_address_form', locals: { roster: @roster }
