!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
    %title #{@roster.try :name} On-Call
    = favicon_link_tag 'calendar-icon.png'
    = stylesheet_link_tag 'application.css', media: 'all'
    = javascript_include_tag 'application.js', nonce: true
    = csrf_meta_tags
  %body
    = render partial: 'layouts/nav', locals: { roster: @roster, rosters: Current.user&.rosters || Roster.none }
    .container
      - if flash[:message].present?
        .alert.alert-success{ role: 'alert' }
          = flash[:message]
          - if flash[:change].present?
            (#{link_to 'undo', undo_change_path(flash[:change])})
      - if flash[:errors].present?
        .alert.alert-danger{ role: 'alert' }
          - if flash[:errors].is_a? Array
            %ul
              - flash[:errors].each do |error_message|
                %li= error_message
          - else
            = flash[:errors]
      #main-content= yield
