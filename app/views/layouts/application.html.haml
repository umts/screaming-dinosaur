!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
    %title #{@roster.try :name} On-Call
    = favicon_link_tag 'calendar-icon.png'
    = stylesheet_link_tag 'application.css', media: 'all'
    = javascript_include_tag 'application.js', nonce: true, type: :module
    = csrf_meta_tags
  %body
    %header
      = render partial: 'layouts/nav', locals: { roster: @roster, rosters: Current.user&.rosters || Roster.none }
      = render partial: 'application/flash'
    %main.container.my-3
      = yield
