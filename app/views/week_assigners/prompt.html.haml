%h1 Generate rotation

.container-fluid
  = form_with model: @assigner,
              url: roster_assign_weeks_path(@assigner.roster),
              local: true do |f|
    .row
      .col-lg
        .mb-3
          = f.label :start_date, class: 'form-label'
          = f.date_field :start_date, class: 'form-control'
        .mb-3
          = f.label :end_date, class: 'form-label'
          = f.date_field :end_date, class: 'form-control'
        .mb-3
          = f.label :starting_user_id, 'Starting with', class: 'form-label'
          = f.collection_select :starting_user_id, @assigner.roster.users.active.order(:last_name),
                                :id, :last_name, {}, class: 'form-select'
      .col-lg
        .mb-3
          = f.label :user_ids, 'Users', class: 'form-label'
          = f.select :user_ids,
                     options_from_collection_for_select(@assigner.roster.users.active.order(:last_name),
                                                        :id, :last_name, @assigner.user_ids),
                     { include_hidden: false },
                     multiple: true, size: 10, class: 'form-select'
    = f.submit 'Generate rotation', class: 'btn btn-primary'
